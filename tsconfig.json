{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
  "paths": {
    "@/app/home.css": ["app/home.css"],
    "@/components/header": ["components/header"],
    "@/components/homePage/form": ["components/homePage/form"],
    "@/components/landingPage/pricing": ["components/landingPage/pricing"],
    "@/components/landingPage/feature": ["components/landingPage/feature"],
    "@/components/card":["components/header"],
    "@/components/sidebar":["components/sidebar"],
    "@/components/topicPage/UpdateForm":["components/topicPage/UpdateForm"]
  
  },
// "paths": {
    //   "@/*": ["./src/*"]
    // }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/userInfo.jsx"],
  "exclude": ["node_modules"]
}
